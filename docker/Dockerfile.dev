# Development Dockerfile for journalling-assistant
# Includes all dev dependencies and hot-reload support

FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Poetry
ENV POETRY_HOME=/opt/poetry
ENV POETRY_VERSION=1.7.1
RUN curl -sSL https://install.python-poetry.org | python3 - && \
    ln -s /opt/poetry/bin/poetry /usr/local/bin/poetry

# Configure Poetry to not create virtual environments (use system Python in container)
RUN poetry config virtualenvs.create false

# Copy dependency files first (for better caching)
COPY pyproject.toml poetry.lock* ./

# Install all dependencies (including dev)
RUN poetry install --no-root --no-interaction

# Copy application code
COPY . .

# Install the project in development mode
RUN poetry install --no-interaction

# Environment variables
ENV PYTHONPATH=/app
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Default command for development - interactive shell
CMD ["bash"]
